{
  "name": "lctt-tools",
  "displayName": "LCTT Tools",
  "description": "LCTT Tools by Linux.cn",
  "publisher":"bestony",
  "preview":true,
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onUri"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "title": "LCTT",
      "displayName": "LCTT Tools",
      "order": 0,
      "properties": {
        "lctt.token": {
          "type": "string",
          "default": "",
          "description": "用于发起请求的 API Token"
        },
        "lctt.host":{
          "type":"string",
          "default":"https://alpha.linux.cn",
          "description": "服务器地址"
        }
      }
    },
    "commands": [
      {
        "command": "lctt.translate_selection",
        "title": "翻译选中内容"
      },
      {
        "command": "lctt.translate_all",
        "title": "翻译全文"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == markdown && !editorHasSelection",
          "command": "lctt.translate_all",
          "group": "navigation"
        },
        {
          "when": "resourceLangId == markdown && editorHasSelection",
          "command": "lctt.translate_selection",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "fast-printf": "^1.6.9"
  },
  "repository": {
    "url": "https://github.com/bestony/linux-vscode",
    "type": "github"
  }
}
